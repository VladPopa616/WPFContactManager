<Window x:Class="WPFContactManager.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFContactManager"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800">

    <ListView Margin="10" Name="dataView">
        <ListView.ItemTemplate>
            <DataTemplate>
                <WrapPanel>
                    <TextBlock Text="{Binding ID}" FontWeight="Bold"/>
                    <TextBlock Text="{Binding FirstName}" FontWeight="Bold"/>
                    <TextBlock Text="{Binding LastName}" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Email}" FontWeight="Bold"/>
                    <TextBlock Text="{Binding PhoneNumber}" FontWeight="Bold"/>
                </WrapPanel>
            </DataTemplate>
        </ListView.ItemTemplate>

    </ListView>
    
</Window>
